{
  "name": "CyberAttacksNews",
  "description": "Real-Time Incident Tracking & Cybersecurity Intelligence Platform",
  "keywords": ["incident-tracking", "cybersecurity", "node", "typescript", "express"],
  "buildCommand": "npm run build",
  "startCommand": "npm start",
  "envs": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "JWT_SECRET": {
      "description": "Secret key for JWT token signing",
      "default": "change-this-in-production"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL connection string (optional, uses in-memory if not set)",
      "default": ""
    }
  },
  "services": [
    {
      "name": "web",
      "runtime": "node",
      "buildCommand": "npm ci && npm run build",
      "startCommand": "npm start",
      "plan": "free",
      "domain": "cyberattacksnews.railway.app"
    },
    {
      "name": "postgres",
      "runtime": "postgres",
      "plan": "free"
    }
  ]
}
