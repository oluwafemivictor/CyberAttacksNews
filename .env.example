# Environment Configuration for CyberAttacksNews
# Copy this file to .env and update values for your environment

# Application
NODE_ENV=development
PORT=3000

# Database Configuration
# Leave DATABASE_URL empty to use in-memory database
# PostgreSQL example: postgresql://user:password@localhost:5432/cyberattacksnews
DATABASE_URL=

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-this-in-production

# Logging
LOG_LEVEL=info
LOG_FORMAT=text

# Optional: Webhook Configuration
WEBHOOK_TIMEOUT=5000
WEBHOOK_RETRIES=3

# Optional: API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Optional: Slack Integration (for alerts)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#security-incidents

# Optional: Email Configuration (for alerts)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ALERT_EMAIL=

# Production Settings
# ENABLE_HTTPS=true
# CERT_PATH=/path/to/cert.pem
# KEY_PATH=/path/to/key.pem
